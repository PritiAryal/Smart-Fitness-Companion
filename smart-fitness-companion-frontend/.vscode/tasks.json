{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Dev Server with Env",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"options": {
				"env": {
					"VITE_API_URL": "http://localhost:5173",
					"VITE_CLIENT_ID": "your_client_id_here",
					"NODE_ENV": "development"
				}
			},
			"problemMatcher": [
				"$tsc"
			]
		}
	]
}